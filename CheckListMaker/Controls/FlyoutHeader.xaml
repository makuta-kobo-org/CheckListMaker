<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheckListMaker.Controls.FlyoutHeader"
             BackgroundColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource Gray200}}"
             HeightRequest="150">

    <Grid RowDefinitions="*, 5">
        <Image Grid.Row="0"
            Source="logo.png"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

        <Border Grid.Row="1"
            BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray300}}"
            HeightRequest="5"
            StrokeThickness="0"/>
    </Grid>

</ContentView>
